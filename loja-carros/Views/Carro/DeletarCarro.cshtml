@model loja_carros.Models.Carro

<h1>Excluir Carro</h1>

<form asp-controller="Carro" asp-action="ExcluirCarroConfirmado" method="post">
    <input type="hidden" asp-for="Id" />
    
    <p>Você tem certeza de que deseja excluir este carro?</p>

    <div>
        <label asp-for="Marca">Marca:</label>
        <span>@Model.Marca</span>
    </div>
    
    <div>
        <label asp-for="Modelo">Modelo:</label>
        <span>@Model.Modelo</span>
    </div>
    
    <div>
        <label asp-for="Ano">Ano:</label>
        <span>@Model.Ano</span>
    </div>
    
    <div>
        <label asp-for="Cor">Cor:</label>
        <span>@Model.Cor</span>
    </div>
    
    <div>
        <label asp-for="Preco">Preço:</label>
        <span>@Model.Preco</span>
    </div>
    
    <div>
        <input type="submit" value="Confirmar" />
        <input type="submit" value="Cancelar" asp-controller="Carro" asp-action="Index" />
    </div>
</form>