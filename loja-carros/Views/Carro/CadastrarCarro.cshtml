@model List<loja_carros.Models.Carro   >
<div>
    <h1>Cadastrar um carro: </h1>
</div>
<form asp-controller="Carro" asp-action="EnviarCarro" method="post" id="meuForm">

    <div>
       
        <label>Marca:</label>
        <input type="text" name="Marca"/>
    </div>
    <div>
        <label>Modelo:</label>
        <input type="text" name="Modelo" />
    </div>
    <div>
        <label>Ano:</label>
        <input type="text" name="Ano" />
    </div>
    <div>
        <label>Cor:</label>
        <input type="text" name="Cor" />
    </div>
        <div>
            <label>Preço:</label>
            <input type="text" name="Preco" />
        </div>

    <div>
        <input type="submit" value="Salvar" />
    </div>
</form>



@if (ViewBag.Mensagem != null)
{
    <div>
        <p>@ViewBag.Mensagem</p>
        
    </div>
}