@model List<Carro>

<div>
    <h1>Agência de Carros</h1>
</div>
<form asp-controller="Carro" asp-action="Index" method="post" id="meuForm">

    <div>
        <label>Marca:</label>
        <input type="text" name="Marca" />
    </div>
    <div>
        <label>Modelo:</label>
        <input type="text" name="Modelo" />
    </div>
    <div>
        <label>Ano:</label>
        <input type="text" name="Ano" />
    </div>
    <div>
        <label>Cor:</label>
        <input type="text" name="Cor" />
    </div>

    <div>
        <input type="submit" value="Salvar" />
    </div>
</form>

    <div>
        <p>@ViewBag.Mensagem</p>
    </div>
}
